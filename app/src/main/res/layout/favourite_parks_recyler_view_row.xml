<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/favouriteParksRecyclerViewRow_cardView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#77A262"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/daniel_craig_1" />

            <TextView
                android:id="@+id/textView_parkName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Park name"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@id/imageView" />

            <TextView
                android:id="@+id/textView_parkDesignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Park designation"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@id/textView_parkName"
                app:layout_constraintTop_toBottomOf="@id/textView_parkName" />

            <TextView
                android:id="@+id/favouriteParks_recyclerViewRow_textView_parkState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="@id/textView_parkDesignation"
                app:layout_constraintTop_toBottomOf="@id/textView_parkDesignation" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>