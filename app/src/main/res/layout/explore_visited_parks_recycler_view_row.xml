<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:elevation="8dp"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/explore_cardView_recyclerViewRow_visitedParks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/explore_imageView_recyclerView_row_visitedParks"
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:layout_constraintDimensionRatio="w,16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dummy_park_image" />

            <TextView
                android:id="@+id/explore_textView_recyclerView_row_visitedParks_parkName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Park name"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/explore_imageView_recyclerView_row_visitedParks"
                app:layout_constraintTop_toBottomOf="@id/explore_imageView_recyclerView_row_visitedParks" />

            <TextView
                android:id="@+id/explore_textView_recyclerView_row_visitedParks_parkDesignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Park designation  &#8226;"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/explore_textView_recyclerView_row_visitedParks_parkName"
                app:layout_constraintTop_toBottomOf="@id/explore_textView_recyclerView_row_visitedParks_parkName" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>