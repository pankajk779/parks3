<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/exploreFragment_textView_events_recyclerView_row_eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="EventLocation"
                app:layout_constraintBottom_toBottomOf="@+id/exploreFragment_imageView_recyclerView_events_locationIcon"
                app:layout_constraintStart_toEndOf="@+id/exploreFragment_imageView_recyclerView_events_locationIcon"
                app:layout_constraintTop_toTopOf="@+id/exploreFragment_imageView_recyclerView_events_locationIcon" />

            <ImageView
                android:id="@+id/exploreFragment_imageView_recyclerView_events_locationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:id="@+id/exploreFragment_textView_recyclerView_events_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:text="Date"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/exploreFragment_textView_recyclerView_events_month"
                app:layout_constraintStart_toStartOf="@+id/exploreFragment_textView_recyclerView_events_month"
                app:layout_constraintTop_toBottomOf="@+id/exploreFragment_textView_recyclerView_events_month" />

            <TextView
                android:id="@+id/exploreFragment_textView_recyclerView_events_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="Month"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/exploreFragment_imageView_recyclerView_events_locationIcon"
                app:layout_constraintTop_toBottomOf="@+id/exploreFragment_imageView_recyclerView_events_locationIcon" />

            <TextView
                android:id="@+id/exploreFragment_textView_recyclerView_events_eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Event title"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/exploreFragment_textView_recyclerView_events_month"
                app:layout_constraintTop_toTopOf="@+id/exploreFragment_textView_recyclerView_events_month" />

            <TextView
                android:id="@+id/exploreFragment_textView_recyclerView_events_eventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Event time"
                app:layout_constraintStart_toStartOf="@+id/exploreFragment_textView_recyclerView_events_eventTitle"
                app:layout_constraintTop_toBottomOf="@+id/exploreFragment_textView_recyclerView_events_eventTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>